{
  "manifest_version": 3,
  "name": "MyDubList",
  "version": "2.0.0",
  "description": "Marks dubbed anime in YOUR language on MyAnimeList and AniList and lets you filter them.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://myanimelist.net/*",
    "https://anilist.co/*",
    "https://www.animenewsnetwork.com/*",
    "https://www.anisearch.com/*",
    "https://graphql.anilist.co/*",
    "https://api.mydublist.com/*",
    "https://raw.githubusercontent.com/*",
    "https://icons.duckduckgo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://myanimelist.net/*", "https://anilist.co/*"],
      "js": ["browser-polyfill.min.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "support@mydublist.com",
      "strict_min_version": "109.0"
    }
  }
}
