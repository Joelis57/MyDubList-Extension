{
  "manifest_version": 3,
  "name": "MyDubList",
  "version": "1.0.1",
  "description": "Displays icons next to anime entries on MyAnimeList to show if they're dubbed in your selected language.",
  "permissions": ["storage"],
  "host_permissions": ["https://myanimelist.net/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://myanimelist.net/*"],
      "js": ["browser-polyfill.min.js", "content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["fonts/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "support@mydublist.com",
      "strict_min_version": "109.0"
    }
  }
}
